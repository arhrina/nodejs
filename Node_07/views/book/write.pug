extends ../layout

block content
    form(method='POST').w3-container
        fieldset.w3-border-blue
            legend 도서정보 입력
                -var inputClasses = ['w3-input', 'w3-border']
            .w3-container
                label(for="bTitle").w3-text-blue 도서명
                input#bTitle(name="bTitle", class=inputClasses)
            .w3-container
                label(for="bWriter").w3-text-blue 저자
                input#bWriter(name="bWriter", class=inputClasses)
            .w3-container
                label(for="bComp").w3-text-blue 출판사
                input#bComp(name="bComp", class=inputClasses)
            .w3-container
                label(for="bPrice").w3-text-blue 가격
                input#bPrice(name="bPrice", class=inputClasses)
            -var btnClasses = ['w3-button', 'w3-right']
            button(class=btnClasses).w3-blue.btn-save 저장
            button(type='button', class=btnClasses).w3-red.btn-delete 삭제
            button(type='button', class=btnClasses).w3-green.btn-list 리스트