extends ../layout

block content
    script.
        $(function(){
            $('th, td').addClass('w3-padding-16')
            $('button').click(function(){
                let label = $(this).text()
                if(label == '수정'){
                    document.location.href='/gallery/update/#{gallery._id}' // 중괄호를 이용해서 update의 id값
                } else if(label == '삭제'){
                     
                } else if(label == '리스트로'){
                    document.location.href = '/gallery'
                }
            })
        })
    section.w3-container.w3-padding-32
        table.w3-table.w3-table-all
            tr
                th= gallery.gStrTitle
            tr
                td
                    img(src='/uploads/' + gallery.gUpLoadPhotoName, width="40%")
            tr
                td !{gallery.gStrText}
    section.w3-container.w3-padding.w3-right
        - var btnClasses=['w3-button', 'w3-large', 'w3-round', 'w3-margin'] /* 배열로 클래스를 만들어서 모든 버튼에 공통적용시키기 */
        button(class=btnClasses).w3-green 리스트로
        button(class=btnClasses).w3-red 삭제
        button(class=btnClasses).w3-blue 수정